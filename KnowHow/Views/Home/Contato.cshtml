@using KnowHow.ViewModel
@model KnowHow.ViewModel.ContatoViewModel

<h2>Contato</h2>

<div class="conteudo padding criar">
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assunto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Assunto)
                @Html.ValidationMessageFor(model => model.Assunto)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Texto</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Texto, new { })
                @Html.ValidationMessageFor(model => model.Texto)
            </div>
        </div>
        <div class="margin">
            <input type="submit" value="Enviar" class="botao-principal" id="enviar"/>
        </div>
        <div class="mensagem-sucesso">Contato enviado com sucesso</div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
